<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context="com.sherlock.test.MainActivity">

    <TextView
        android:id="@+id/tv_hint_input_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入要轰炸的手机号：\n（可同时填写多个）"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="启用电话轰炸" />

    <EditText
        android:id="@+id/et_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_hint_input_phone"
        android:layout_marginTop="20dp"
        android:hint="此项必填"
        android:inputType="phone"
        android:maxLength="11" />

    <EditText
        android:id="@+id/et_phone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone"
        android:layout_marginTop="20dp"
        android:hint="选填"
        android:inputType="phone"
        android:maxLength="11" />

    <EditText
        android:id="@+id/et_phone3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone2"
        android:layout_marginTop="20dp"
        android:hint="选填"
        android:inputType="phone"
        android:maxLength="11" />

    <EditText
        android:id="@+id/et_phone4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone3"
        android:layout_marginTop="20dp"
        android:hint="选填"
        android:inputType="phone"
        android:maxLength="11" />

    <EditText
        android:id="@+id/et_phone5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone4"
        android:layout_marginTop="20dp"
        android:hint="选填"
        android:inputType="phone"
        android:maxLength="11" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_phone5"
        android:text="开始轰炸" />

    <Button
        android:id="@+id/btn_stop"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_phone5"
        android:text="停止轰炸" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_start"
        android:layout_marginTop="10dp"
        android:text="" />

</RelativeLayout>
